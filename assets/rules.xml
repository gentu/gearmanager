<!-- Default Attributes Values:
     Target Tag Flow <module-info>-<devices>-<group>-<item> : supportTablet="true" , hostMinMemory= "1024" MB , supportNonSamsung="false" , supportMultiConnection="false" , requiresPairing="true"
     Target Tag Flow <module-info>-<additional-packages>-<package> : optional="false" , installerPackage="com.samsung.android.app.watchmanager" , requiredForNonSamsung="false" ,checkForUpdate="false"
     Target Tag Flow <common-info>-<packages> : disablePackage="true"
     Target Tag Flow <module-info>-<devices>-<group> : customPairing="true" viFragment="com.samsung.android.app.watchmanager.setupwizard.GalaxyFragment" downloadInstallLayout="pop_download_install"
 -->

<rules>
    <gear-info version="2.08">

        <module-info containerName="com.samsung.android.gear1module" pluginName="com.samsung.android.gear1plugin">
            <devices>
                <group name="Gear 1">
                    <item>Galaxy Gear</item>
                </group>
            </devices>
            <additional-packages>
                <package optional="true">com.samsung.svoiceprovider</package>
            </additional-packages>
        </module-info>

        <module-info containerName="com.samsung.android.gear2smodule" pluginName="com.samsung.android.gear2plugin">
            <devices>
                <group name="Gear 2">
                    <item>Gear</item>
                    <item>Gear 2</item>
                    <item>Gear 2 Neo</item>
                    <item>Gear 2 Lite</item>
                </group>
            </devices>
        </module-info>

        <module-info containerName="com.samsung.android.gear2smodule" pluginName="com.samsung.android.gear2plugin">
            <devices>
                <group name="Gear S">
                    <item supportTablet="false">Gear S</item>
                </group>
            </devices>
        </module-info>

        <module-info containerName="com.samsung.android.gearoplugin" pluginName="com.samsung.android.gearoplugin" >
            <devices>
                <group name="Gear S2">
                    <item supportNonSamsung="true" supportTablet="false">Gear O</item>
                    <item supportNonSamsung="true" supportTablet="false">Gear A</item>
                    <item supportNonSamsung="true" supportTablet="false">Gear S2</item>
                </group>
                <group name="Gear S3">
                    <item supportNonSamsung="true" supportTablet="false">Gear C</item>
                    <item supportNonSamsung="true" supportTablet="false">Gear S3</item>
                </group>
                <group name="Gear Sport">
                    <item supportNonSamsung="true" supportTablet="false">Gear POP</item>
                    <item supportNonSamsung="true" supportTablet="false">Gear Sport</item>
                </group>
            </devices>
            <additional-packages>
                <package onlyForNonSamsung="true" optional="false">com.samsung.accessory</package>
            </additional-packages>
        </module-info>

        <module-info pluginName="com.samsung.android.neckletplugin">
            <devices>
                <group name="Gear Circle" customPairing="false">
                    <item connectAudio="true" hostMinMemory="0" icon="gm_managerdevices_list_ic_gearcircle" supportMultiConnection="true" supportTablet="false">Gear Circle</item>
                </group>
            </devices>
        </module-info>

        <module-info containerName="com.samsung.android.gearfit2plugin" pluginName="com.samsung.android.gearfit2plugin" >
            <devices>
                <group name="Gear Fit2">
                    <item icon="gm_managerdevices_list_ic_gearfit2" supportNonSamsung="true" supportTablet="false">Gear Fit2</item>
                    <item icon="gm_managerdevices_list_ic_gearfit2" supportNonSamsung="true" supportTablet="false">Gear Fit2 Pro</item>
                </group>
            </devices>
            <additional-packages>
                <package onlyForNonSamsung="true" optional="false">com.samsung.accessory</package>
            </additional-packages>
        </module-info>

        <module-info pluginName="com.samsung.accessory.triathlonmgr" >
            <devices>
                <group name="Gear IconX" customPairing="false">
                    <item connectAudio="true" hostMinMemory="0" icon="gm_managerdevices_list_ic_iconx" supportMultiConnection="true" supportNonSamsung="true" supportTablet="false">Gear Triathlon M</item>
                    <item connectAudio="true" hostMinMemory="0" icon="gm_managerdevices_list_ic_iconx" supportMultiConnection="true" supportNonSamsung="true" supportTablet="false">Gear Triathlon S</item>
                    <item connectAudio="true" hostMinMemory="0" icon="gm_managerdevices_list_ic_iconx" supportMultiConnection="true" supportNonSamsung="true" supportTablet="false">Gear IconX R</item>
                    <item connectAudio="true" hostMinMemory="0" icon="gm_managerdevices_list_ic_iconx" supportMultiConnection="true" supportNonSamsung="true" supportTablet="false">Gear IconX L</item>
                </group>
            </devices>
        </module-info>

        <module-info pluginName="com.samsung.accessory.beansmgr" >
            <devices>
                <group name="Gear IconX" customPairing="false">
                    <item connectAudio="true" hostMinMemory="0" icon="gm_managerdevices_list_ic_iconx" supportMultiConnection="true" supportNonSamsung="true" supportTablet="false">Gear IconX</item>
                    <item connectAudio="true" hostMinMemory="0" icon="gm_managerdevices_list_ic_iconx" supportMultiConnection="true" supportNonSamsung="true" supportTablet="false">Gear IconX 2</item>
                </group>
            </devices>
        </module-info>

        <module-info pluginName="com.samsung.android.chironplugin">
            <devices>
                <group name="Gear Chiron" customPairing="false">
                    <item requiresPairing="false" supportNonSamsung="true" supportTablet="false">Gear Chiron</item>
                    <item requiresPairing="false" supportNonSamsung="true" supportTablet="false">Samsung Gear Chiron</item>
                </group>
            </devices>
        </module-info>

        <common-info>
            <packages>
                <item disablePackage="false">com.samsung.accessory</item>
                <item disablePackage="false">com.samsung.accessory.safiletransfer</item>
            </packages>
            <discovery-keyword>
                <item>gear</item>
            </discovery-keyword>
            <skip-device>
                <item>Gear Fit</item>
            </skip-device>
        </common-info>

    </gear-info>
</rules>
