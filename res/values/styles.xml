<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TransActivityFullScreen" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar.Fullscreen">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="TransActivityFullScreenWithActionbar" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:progressBarStyle">@android:style/Widget.DeviceDefault.ProgressBar</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarSize">@dimen/action_bar_h</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:actionMenuTextAppearance">@style/ActionBarMenuStyle</item>
        <item name="android:actionMenuTextColor">@color/action_bar_menu_textcolor</item>
    </style>
    <style name="setupProgressBar" parent="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal">
        <item name="android:maxHeight">5.0dip</item>
        <item name="android:indeterminateDrawable">@drawable/winset_progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/winset_progress_drawable</item>
        <item name="android:minHeight">5.0dip</item>
    </style>
    <style name="ActionBarCompatTitleBase" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/action_bar_title_font_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/actionbar_title_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:shadowDx">-3.0</item>
        <item name="android:shadowDy">-3.0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="ActionBarMenuStyle" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/action_bar_menu_textcolor</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="MyActionBar" parent="@android:style/Widget.DeviceDefault.Light.ActionBar">
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:background">@color/background</item>
        <item name="android:displayOptions">homeAsUp|showHome|showTitle</item>
        <item name="android:titleTextStyle">@style/ActionBarCompatTitleBase</item>
        <item name="android:homeAsUpIndicator">@drawable/tw_ic_ab_back_mtrl</item>
    </style>
    <style name="TextView_ListCategory" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/device_list_device_title_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_height">@dimen/list_main_category_height</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
    <style name="TextView_ListDescFirstLine" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/list_first_line_desc_text_size</item>
        <item name="android:textColor">@color/normal_text_color_list</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="TextView_PopupButton" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/popup_btn_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/popup_btn_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/manager_popup_btn</item>
        <item name="android:paddingLeft">12.0dip</item>
        <item name="android:paddingRight">12.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="TextView_PopupDesc" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/popup_desc_text_size</item>
        <item name="android:textColor">@color/normal_text_color</item>
        <item name="android:linksClickable">true</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sec-roboto-light</item>
        <item name="android:layout_marginStart">@dimen/popup_left_right_margin</item>
        <item name="android:layout_marginEnd">@dimen/popup_left_right_margin</item>
    </style>
    <style name="TextView_PopupTitle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/popup_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/popup_title_text</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/popup_left_right_padding</item>
        <item name="android:paddingTop">@dimen/popup_title_top_bottom_padding</item>
        <item name="android:paddingRight">@dimen/popup_left_right_padding</item>
        <item name="android:paddingBottom">@dimen/popup_title_top_bottom_padding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:fontFamily">sec-roboto-light</item>
    </style>
    <style name="TextView_deviceStatus" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/list_view_subtext_size</item>
        <item name="android:textColor">@color/listView_subtext_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="TextView_welcome_device_list" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/welcome_device_name_text_size</item>
        <item name="android:textColor">@color/welcome_device_list_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">sec-roboto-regular</item>
    </style>
    <style name="Theme.FloatingDialog" parent="@android:style/Theme.DeviceDefault.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
